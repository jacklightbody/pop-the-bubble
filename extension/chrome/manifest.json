{
  "manifest_version": 2,

 "name": "Pop the Bubble",
  "description": "Get reminders when you've read a lot of one side of an issue",
  "version": "1.0",

 "browser_action": {
   	"default_icon": "icon.png",
     "default_popup": "popup.html"
  },
  "background": { 
     "page": "background.html"
   },
  "permissions": [
   	"activeTab",
     "<all_urls>"
  ],
   "content_scripts": [
     {
       "matches" : ["<all_urls>"],
       "js" : ["content.js"],
       "run_at": "document_end"
     }
   ]
}